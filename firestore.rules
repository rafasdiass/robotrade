rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra que permite a leitura de qualquer documento
    match /{document=**} {
      allow read: if true;
    }

    // Regra que permite a gravação (adicionar / atualizar) de documentos apenas para usuários autenticados
    match /{document=**} {
      allow write: if request.auth != null;
    }
  }
}
